<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/logouttxt"
        style="@style/BtnTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_checkout"
        android:drawableTint="@color/colorWhite"
        android:padding="20dp"
        android:text="Log Out"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:padding="20dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/btnpanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/date_time"
        android:layout_centerVertical="true"
        android:layout_marginTop="130dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnadduser"
            style="@style/BtnTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btnbg"
            android:backgroundTint="@color/successColor"
            android:drawableLeft="@drawable/ic_add_user"
            android:elevation="@dimen/dp_10"
            android:paddingLeft="20dp"
            android:text="Add User"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btndeleteuser"
            style="@style/BtnTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btnbg"
            android:backgroundTint="@color/errorColor"
            android:drawableLeft="@drawable/ic_delete"
            android:elevation="@dimen/dp_10"
            android:paddingLeft="20dp"
            android:text="Delete User"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnexportdata"
            style="@style/BtnTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btnbg"
            android:backgroundTint="@color/passCodeColor"
            android:drawableLeft="@drawable/ic_export_data"
            android:elevation="@dimen/dp_10"
            android:paddingLeft="20dp"
            android:text="Export Data"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnsetting"
            style="@style/BtnTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btnbg"
            android:backgroundTint="@color/warningColor"
            android:drawableLeft="@drawable/ic_setting"
            android:elevation="@dimen/dp_10"
            android:paddingLeft="20dp"
            android:text="Setting"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_exit"
        android:tint="@color/passCodeColor"/>
</RelativeLayout>
